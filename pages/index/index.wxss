/**index.wxss**/
.container{
  width: 100%;
  height: 100%;
  position: fixed;
}
.bgImg{
  width: 100%;
  height: 100%;
  /* position: fixed; */
}
@keyframes move {
    50% {
        transform: translate(-150rpx, 0);
    }
}
@-webkit-keyframes move{
  50% {
        transform: translate(-150rpx, 0);
    }
}

.bgImg image{
    animation: move 20s linear infinite; 
   -webkit-animation: move 20s linear infinite;  
  width: 900rpx;
  height: 100%;
  display: block;
}


.title{
  position: absolute;
  color: white;
  top: 8%;
  left: 9%;
  font-size: 48rpx;
  z-index: 100;
}
.sh{
  font-size: 100rpx;
  font-weight: bolder;
  margin-bottom: 36rpx;
}
.title text{
  display: block;
}

.stbtn{
  position: absolute;
   width: 100%; 
  /* margin: 0 auto; */
  bottom: 14%;
}
.stbtn button{
  width: 300rpx;
  border-radius: 60rpx;
}